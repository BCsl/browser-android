<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/category_icon"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tracker_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_name"
        android:layout_alignLeft="@id/category_name"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/group_arrow_indicator"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/category_name"/>
    <TextView
        android:id="@+id/trackers_blocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/control_center_green"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/group_arrow_indicator"
        android:layout_alignBottom="@id/tracker_count" />

</RelativeLayout>