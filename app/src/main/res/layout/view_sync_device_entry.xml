<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/actions_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        tools:srcCompat="@drawable/ic_menu_overflow"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_toStartOf="@+id/actions_button"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/actions_button">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            tools:ignore="HardcodedText"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_status"
            android:textColor="@color/gray_medium"
            android:text="Status"
            android:textSize="14sp"
            tools:ignore="HardcodedText"/>


    </LinearLayout>

    <TextView
        android:id="@+id/connecting_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="@string/msg_connecting_to_desktop"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />
</RelativeLayout>